# AmiExpress Web Environment Variables
# Copy this file to .env.local and fill in your actual values
# .env.local is ignored by git and Vercel

# ============================================
# VERCEL DEPLOYMENT (Main Application)
# ============================================

# Vercel CLI Authentication
# Get from: vercel login (or copy from ~/.vercel/auth.json)
VERCEL_TOKEN=vercel_token_here

# ============================================
# RENDER.COM DEPLOYMENT (Webhooks)
# ============================================

# Render API Key
# Get from: https://dashboard.render.com/account/api-keys
RENDER_API_KEY=render_api_key_here

# ============================================
# DATABASE CONFIGURATION (PostgreSQL on Vercel)
# ============================================

# PostgreSQL Connection String
# Get from: Vercel Dashboard > Storage > Postgres > .env.local
POSTGRES_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database
POSTGRES_URL_NO_SSL=postgresql://username:password@host:port/database
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database

# Individual PostgreSQL Variables (alternative to URL)
POSTGRES_USER=your_db_user
POSTGRES_HOST=your_db_host
POSTGRES_PASSWORD=your_db_password
POSTGRES_DATABASE=your_db_name

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# JWT Secret for authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Node Environment
NODE_ENV=production

# ============================================
# VERCEL-SPECIFIC VARIABLES
# ============================================

# Vercel Project ID (optional, for API calls)
# Get from: vercel project ls
VERCEL_PROJECT_ID=your_project_id

# Vercel Organization ID (optional, for team deployments)
# Get from: vercel teams ls
VERCEL_ORG_ID=your_org_id

# ============================================
# DEVELOPMENT VARIABLES (Optional)
# ============================================

# Local development database (SQLite fallback)
DATABASE_URL=sqlite:./data/amiexpress.db

# Development server ports
BACKEND_PORT=3001
FRONTEND_PORT=5173